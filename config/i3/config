set $mod Mod4

font pango:Inconsolata 11

floating_modifier $mod

gaps inner 15
smart_borders on

# Set colors from Xresources
set_from_resource $fg i3wm.color7 #f0f0f0
set_from_resource $bg i3wm.color8 #f0f0f0
set_from_resource $bg_unfoc i3wm.color0 #f0f0f0

# kill focused window
bindsym $mod+Shift+A kill

# focus container
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move container
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

bindsym $mod+h split h
bindsym $mod+v split v

bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
# bindsym $mod+s layout stacking
# bindsym $mod+z layout tabbed
bindsym $mod+s layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+q focus parent

# focus the child container
#bindsym $mod+d focus child

# Worskpace switch
bindsym $mod+ctrl+Left workspace prev_on_output
bindsym $mod+ctrl+Right workspace next_on_output

bindsym $mod+ampersand workspace 1:
bindsym $mod+eacute workspace 2:II
bindsym $mod+quotedbl workspace 3:III
bindsym $mod+apostrophe workspace 4:IV
bindsym $mod+parenleft workspace 5:V
bindsym $mod+minus workspace 6:VI
bindsym $mod+egrave workspace 7:_Musique
bindsym $mod+underscore workspace 8:VIII
bindsym $mod+ccedilla workspace 9:IX
bindsym $mod+agrave workspace 10:X

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace 1:
bindsym $mod+Shift+eacute move container to workspace 2:II
bindsym $mod+Shift+3 move container to workspace 3:III
bindsym $mod+Shift+4 move container to workspace 4:IV
bindsym $mod+Shift+5 move container to workspace 5:V
bindsym $mod+Shift+6 move container to workspace 6:VI
bindsym $mod+Shift+egrave move container to workspace 7:_Musique
bindsym $mod+Shift+8 move container to workspace 8:VIII
bindsym $mod+Shift+ccedilla move container to workspace 9:IX
bindsym $mod+Shift+agrave move container to workspace 10:X

bindsym $mod+ctrl+Shift+Right move window to workspace next_on_output
bindsym $mod+ctrl+Shift+Left move window to workspace prev_on_output

# reload the configuration file
bindsym $mod+Shift+c reload

bindsym $mod+Shift+r restart

# exit i3 (logs you out of your X session)
# bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

mode "resize" {

    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

set $power_control " [l]ock log[o]ut [s]uspend  [r]eboot  [p]oweroff"
mode $power_control {
	bindsym l exec ~/.config/i3/lock/lock -- scrot; mode "default"
	bindsym o exec i3-msg exit; mode "default"
   	bindsym s exec systemctl suspend; mode "default"
   	bindsym r exec systemctl reboot; mode "default"
   	bindsym p exec systemctl poweroff; mode "default"
   	bindsym Return mode "default"
	bindsym Escape mode "default"
}

bindsym $mod+n mode $power_control

client.focused          $bg     			$bg     			$fg  	$bg 						$bg
client.focused_inactive $bg     			$bg     			$fg  	$bg       			$bg
client.unfocused        $bg_unfoc     $bg_unfoc     $fg  	$bg_unfoc      	$bg_unfoc
client.urgent           $bg     			$bg     			$fg  	$bg       			$bg
client.placeholder 			$bg 					$bg 					$fg 	$bg 						$bg


bar {
	i3bar_command i3bar -t
	position top
    status_command i3status -c ~/.config/i3/i3status.conf
	strip_workspace_numbers yes
	font pango: Inconsolata, FontAwesome 10.5
	colors {
		background #302e3850
		separator #666666
		focused_workspace #0088CC #0088CC #ffffff
		active_workspace #333333 #333333 #888888
		inactive_workspace #333333 #333333 #888888
		urgent_workspace #2f343a #900000 #ffffff
	}
}

# center window
bindsym $mod+c move position center

# specific app shortcuts
bindsym $mod+Return exec urxvt256c
bindsym $mod+d exec rofi -show drun
bindsym $mod+e exec nautilus

# Audio control
bindsym XF86AudioRaiseVolume exec amixer -q set Master 5%+ && pkill -SIGRTMIN+3
bindsym XF86AudioLowerVolume exec amixer -q set Master 5%- && pkill -SIGRTMIN+3
bindsym XF86AudioMute exec pactl set-sink-mute 0 toggle && pkill -SIGRTMIN+3

# Brightness
bindsym XF86MonBrightnessUp exec xbacklight -inc 10 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 10 # decrease screen brightness

# start applications
exec feh --bg-fill /home/kangoula/Images/77.png &
exec /usr/bin/compton --config /home/kangoula/.config/i3/compton.conf &
exec --no-startup-id owncloud &
exec [ ! -s ~/.config/mpd/pid ] && mpd &
exec --no-startup-id redshift &
exec --no-startup-id dunst &

# Specific settings for windows
for_window [class="^.*"] border pixel 1
for_window [class="^.*"] floating disable
for_window [class=".*"] title_format "<span font='Inconsolata 9'> > %title</span>"
for_window [window_role="GtkFileChooserDialog"] floating enable
for_window [instance="slack"] move container to workspace 4:IV
for_window [instance="spotify"] move container to workspace 7:_Musique
for_window [instance="Dialog"] floating enable
for_window [instance="owncloud"] floating enable
for_window [instance="Places"] floating enable
